  if(num == 5)//0101
  {
    digitalWrite(i, HIGH);//1
    digitalWrite(j, LOW);//0
    digitalWrite(k, HIGH);//1
    digitalWrite(l, LOW);//0
  }
  if(num == 6)//0110
  {
    digitalWrite(i, LOW);//0
    digitalWrite(j, HIGH);//1
    digitalWrite(k, HIGH);//1
    digitalWrite(l, LOW);//0
